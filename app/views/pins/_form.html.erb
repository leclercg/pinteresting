<%= form_for @pin, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control", 'id'=>'fileUpload' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tags, "Tags" %><br/>
    <%= f.text_field :tag_list, value: @pin.tag_list.to_s , 'class'=>'form-control', 'data-role'=>'tagsinput', 'placeholder'=>'Add tags' %>
  </div>
  <div class="form-group" id="image-holder-div" style="display:none;">
    <%= f.label :imagePreview, "Image preview" %>
    <div id="image-holder"></div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>