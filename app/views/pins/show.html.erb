<%= link_to 'Back', pins_path %>
<% if @pin.next_image != @pin %>
   | <%= link_to 'Next', @pin.next_image %>
<% end %>
<% if @pin.previous_image != @pin %>
   | <%= link_to 'Previous', @pin.previous_image %>
<% end %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <%= link_to image_tag(@pin.image(:medium)), @pin.image.url(:original) %>
      </div>
      <div class="panel-body">
        <p>Added <%= time_ago_in_words(@pin.created_at) %> ago</p>
        <p><%= @pin.description %></p>
        <p><strong><%= link_to @pin.user.name, @pin.user if @pin.user %></strong></p>
        <p><% @pin.tags.each do |tag| %>
            <span class="label label-teal">
              <%= link_to tag.name, tag_path(tag.name) %>
            </span>
        <% end %></p>
        <% if current_user && @pin.user == current_user %>
           <%= link_to edit_pin_path(@pin) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
           <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>